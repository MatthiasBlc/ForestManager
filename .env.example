# ========================================
# Forest Manager - Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# ========================================
# Docker Compose
# ========================================
COMPOSE_PROJECT_NAME=forestmanager

# ========================================
# PostgreSQL
# ========================================
POSTGRES_USER=forestmanager
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=forestmanager_db

# ========================================
# Backend
# ========================================
PORT=3001
SESSION_SECRET=your_session_secret_here_min_32_chars
ADMIN_SESSION_SECRET=your_admin_session_secret_here_min_32_chars
CORS_ORIGIN=http://localhost:3000

# ========================================
# Frontend
# ========================================
VITE_BACKEND_URL=http://localhost:3001

# ========================================
# Production Only (GitHub Secrets)
# ========================================
# REGISTRY_URL=registry.example.com
# IMAGE_NAME=forestmanager
# PORTAINER_URL=https://portainer.example.com
# PORTAINER_API=your_portainer_api_key
# STACK_ID=your_stack_id
# ENDPOINT_ID=your_endpoint_id
# API_URL=https://api.forestmanager.example.com
